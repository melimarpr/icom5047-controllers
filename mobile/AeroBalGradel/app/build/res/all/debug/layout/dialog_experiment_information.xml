<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dialogExpInfoTitle"
        android:textSize="26sp"
        android:maxLines="1"
        android:maxLength="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:text="@string/placeholder_title"
        android:gravity="center_vertical|left" />
    <TableLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="left|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/frag_exp_sum_wind_speeds" />

            <TextView
                android:id="@+id/dialogExpInfoWindSpeed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/placeholder_double_value" />

            <TextView
                android:gravity="center|left"
                android:id="@+id/dialogExpInfoWindSpeedUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/placeholder_units" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/frag_exp_sum_samples" />

            <TextView
                android:id="@+id/dialogExpInfoSample"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/placeholder_integer_value" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/frag_exp_sum_interval" />

            <TextView
                android:id="@+id/dialogExpInfoTimeIntervalValue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/placeholder_integer_value" />

            <TextView
                android:gravity="center|left"
                android:id="@+id/fragExpSumTimeIntervalUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/units_seconds" />

        </TableRow>


    </TableLayout>

</LinearLayout><!-- From: file:/Users/enrique/Documents/ICOM5047/ICOM5047-Codebase/icom5047-controllers/mobile/AeroBalGradel/app/src/main/res/layout/dialog_experiment_information.xml -->