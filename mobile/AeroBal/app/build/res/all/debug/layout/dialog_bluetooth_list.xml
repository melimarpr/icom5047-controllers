<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/dialog_lv_bt_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/divider_grey"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/selector_drawer"
        android:background="@color/super_dim_white" >
    </ListView>

    <TextView
        android:padding="10dp"
        android:visibility="gone"
        android:textColor="@color/dark_grey"
        android:layout_gravity="center"
        android:id="@+id/dialog_lv_bt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_bt_empty_list"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
